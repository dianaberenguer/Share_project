<%= content_for	:header do %>
	<div class="container" id="nav">
		<a href="/../index">
				<%= image_tag("logo-small.png", alt: "logo") %>
		</a>

		<div id="search">
			<input type="search"/>
		</div>
	</div>
<% end %>


<% content_for :background  do %>
	user
<% end %>

<% @user.errors.each do |field, error| %>
	<p><%= "#{field} #{error}" %></p>
<% end %>

	<div>
		<div class="row">
		  	<div class="col-md-4 col-md-offset-4 bgray" style="padding: 30px">

		  		<h1>Welcome new user!</h1>

				<%= form_for @user do |f| %>
					<%= f.label :avatar %>
					<%= f.file_field :avatar %>
					</br>
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control" %>
					</br>
					<%= f.label :email %>
					<%= f.text_field :email, class: "form-control" %>
					</br>
					<%= f.label :location %>
					<%= f.select(:location, ['Barcelona', 'Madrid', 'Valencia', 'Sevilla'], {}, {:class => 'form-control mtop'})%>
					</br>
					<%= f.label :description %> (optional)
					<%= f.text_field :description, class: "form-control" %>
					</br>
					<%= f.submit class: "btn btn-primary btn-sm" %>
				<% end %>
			</div>
		</div>
</div>
</main>
