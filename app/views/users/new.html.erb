<% @user.errors.each do |field, error| %>
	<p><%= "#{field} #{error}" %></p>
<% end %>
<div class="row">
  	<div class="col-md-4 col-md-offset-4 bgray" style="padding: 30px">

		<%= form_for @user do |f| %>
			<%= f.label :avatar %>
			<%= f.file_field :avatar %>
			<%= image_tag @user.avatar.url, class: "img-circle" %>
			</br>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
			</br>
			<%= f.label :description %>
			<%= f.text_field :description, class: "form-control" %>
			</br>
			<%= f.submit class: "btn btn-primary btn-sm" %>
		<% end %>
	</div>
</div>
