<%= content_for	:header do %>
	<div class="container" id="nav">
		<div id="logo">
			<a href="/../items">
				<%= image_tag("logo-small.png", alt: "logo") %>
			</a>
		</div>
		<div id="head-btn">
			<a class= "btn btn-primary" href="users/1/items/new">+ Create item</a>
		</div>
		<div id="search">
			<input type="search"/>
		</div>
	</div>
<% end %>


<div class="row">
  	<div class="col-md-4 col-md-offset-4 bg-gray" style="padding: 30px">
		<%= image_tag @user.avatar.url(:large), class: "img-rounded" %>
		<div id="info-user">
		</br>
			<h4>Name:</h4>
			<p><%= @user.name %></p>
			</br>
			<h4>Location:</h4>
			<p><%= @user.location %></p>
			</br>
			<h4>Email:</h4>
			<p><%= @user.email %></p>
			</br>
			<h4>Description:</h4>
			<p><%= @user.description %></p>
			</br>
		</div>
		<div>
			<a class= "btn btn-secondary" href="/../items"> < Go to index</a>
			
			<%= link_to('Edit',  new_user(@user), class: "btn btn-secondary")  %>
			<!-- <a class= "btn btn-secondary" href="#"> Change profile</a> -->
		</div>
	</div>


</div>

