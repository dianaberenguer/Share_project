<%= content_for	:header do %>
	<div class="container" id="nav">
		<div id="logo">
			<%= image_tag("logo-small.png", alt: "logo") %>
		</div>
		<div id="head-btn">
			<a class= "btn btn-primary" href="users/1/items/new">+ Create item</a>
			<a class= "btn btn-secondary" href="users/new">New user</a>
		</div>
		<div id="search">
			<input type="search"/>
		</div>
	</div>
<% end %>

<div id="list" class="row">
	<ul>
		<% @items.each do |item| %>
			<li id="item" class="col-md-4 col-xs-6">
				<div id="itemImg">
			   		<%= image_tag item.picture.url(:medium) %>
				</div>
					</br>
				<p id="itemName"> <%= item.name %> </p>
				</br>
				<%= item.description %>
				</br>
				<%= item.price %> â‚¬
				</br>
				<%= item.date %>
				</br>
				<div id="BtnItem">
					<button class= "btn btn-sm btn-primary">Share it!</button>
					<button class= "btn btn-sm">View</button>
				</div>
			</li>
		<% end %>
	</ul>
</div>
