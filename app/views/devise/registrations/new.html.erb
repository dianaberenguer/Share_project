<% content_for :background do %>
  user
<% end %>

<div class='col-md-4 col-md-offset-4 bgray'>
  <h1>Welcome new user!</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class='form-group'>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>

    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :location %>
      <%= f.select(:location, ['Barcelona', 'Madrid', 'Valencia', 'Sevilla'], {}, class: 'form-control mtop') %>
    </div>

    <div class='form-group'>
      <%= f.label :description %> (optional)
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary btn-sm' %>
    </div>
  <% end %>
</div>

<%# render "devise/shared/links" %>

